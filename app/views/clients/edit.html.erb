<div class="container">

<h1>Edit Your Profile </h1> <br>
<br>
<img src="https://tjn-blog-images.s3.amazonaws.com/wp-content/uploads/2015/06/20004912/home-health-aide.jpg">
<br><br><br>


<%= form_for @client do |f| %>
  
  
  <%= f.label :first_name %>
  <%= f.text_field :first_name %> <br/>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br/>
  <%= f.label :email %>
  <%= f.text_field :email %><br/>
  <%= f.label :phone %>
  <%= f.number_field :phone %><br/>
  <%= f.label :age %>
  <%= f.number_field :age %><br/>
  <%= f.label :town_you_live_in %>
  <%= f.select :town_you_live_in, options_for_select(["Brooklyn", "Queens", "Bronx", "Jamaica", "Manhattan", "Long Island"]) %><br/>
  <%= f.label :gender %>
  <%= f.select :gender, options_for_select(["Female", "Male"])%><br/>
  <%= f.label :preference_on_aides %>
  <%= f.select :preference_on_aides, options_for_select(["Male", "Female", "It makes no difference"]) %><br/>
  <%= f.label :password %>
  <%= f.password_field  :password %><br>

  <%= f.submit "UPDATE!", :class => "btn btn-success" %>
<% end %>


</div>
