<h1> You are in the request_job new</h1>



<%= form_for @request_job do |f| %>
  <%= f.label :request_service_id, "Service" %>
  <%= f.collection_select :request_service_id, @request_services, :id, :skills %> <br/>
  <%= f.label :aide_id %>
  <%= f.collection_select :aide_id, @aides, :id, :first_name %><br/>
  <%= f.label :pay_rate %>
  <%= f.number_field :pay_rate %><br/>
  <%= f.label :starting_date %>
  <%= f.date_select :starting_date %><br/>
  <%= f.label :location %>
  <%= f.text_field :location %><br/>
  
  <%= f.submit "Ready!" %>
<% end %>