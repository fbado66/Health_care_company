<!DOCTYPE html>
<html>
  <head>
    <title>HealthCareAgency</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

 <% if check_and_see_if_someone_is_logged_in_as_client? %>
      <nav>
        LOGGED IN: <%= @current_user.first_name %> -- <%= @current_user.role %>    

        <%= button_to "LOG OUT", logout_path, method: :delete %>
      </nav>

      <% elsif check_and_see_if_someone_is_logged_in_as_aide? %>
      <nav>
        LOGGED IN: <%= @current_user.first_name %> -- <%= @current_user.role %>    

        <%= button_to "LOG OUT", logout_path, method: :delete %>
      </nav>

  
    <% else %>
      <nav> 
        <%= link_to "LOGIN PATH CLICK HERE", login_path %>

      </nav>
    <% end %>



  
      
    <%= yield %>
  </body>
</html>
