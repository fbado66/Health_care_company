    <% if check_and_see_if_someone_is_logged_in_as_aide? %>

<nav class="nav flex-column">
  <a class="nav-link active" >Hello <%= @current_aide.first_name %></a>
  <a class="nav-link"><%= button_to "LOG OUT", logout_path, method: :delete, :class => "btn btn-danger" %></a>
  <a class="nav-link" >        <%= button_to "My Profile", profile_path, method: :get, :class => "btn btn-success"  %>
</a>
</nav>
    <% elsif check_and_see_if_someone_is_logged_in_as_client? %>
<nav class="nav flex-column">
  <a class="nav-link active" >Hello <%= @current_client.first_name %></a>
  <a class="nav-link"><%= button_to "LOG OUT", logout_2_path, method: :delete, :class => "btn btn-danger" %></a>
  <a class="nav-link" >        <%= button_to "My Profile", my_profile_path, method: :get, :class => "btn btn-success"  %>
</a>
</nav>
