          </li>
            <% if check_and_see_if_someone_is_logged_in_as_aide? %>
              <nav class="nav flex-column">
                <a class="nav-link"><%= link_to "My Profile", profile_path, method: :get, :class => "btn-primary", :id => 'nav-no-decoration'%></a>
                <a class="nav-link"><%= button_to "Log Out", logout_path, method: :delete, :class => "btn-danger", :id => 'nav-no-decoration' %></a>
              </nav>

            <% elsif check_and_see_if_someone_is_logged_in_as_client? %>
              <nav class="nav flex-column">
                <a class="nav-link"><%= link_to "My Profile", my_profile_path, method: :get, :class => "btn-primary", :id => 'nav-no-decoration'%></a>
                <a class="nav-link"><%= button_to "Log Out", logout_2_path, method: :delete, :class => "btn-danger", :id => 'nav-no-decoration' %></a>
              </nav>

            <% elsif check_and_see_if_someone_is_logged_in_as_admin? %>
              <nav class="nav flex-column">
                <a class="nav-link"><%= link_to "My Profile", admin_profile_path, method: :get, :class => "btn-primary", :id => 'nav-no-decoration'%></a>
                <a class="nav-link"><%= button_to "Log Out", logout_3_path, method: :delete, :class => "btn-danger", :id => 'nav-no-decoration' %></a>
              </nav>

            <% else %>            
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Log in</a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" href="/login">Aides </a>
                <a class="dropdown-item" href="/login_2">Clients</a>
                <a class="dropdown-item" href="/login_3">Admin</a>
              </div>
          </li>

          <% end %>
 
        </ul>
      </div>
    </nav>
    
      

    <!-- Button trigger modal -->
