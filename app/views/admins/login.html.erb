

<div class="customized-container">
    <h2>Welcome back Admin</h2>
    <br>
        <% if @error %>
            <p><%= @error %></p>
        <% end %>
        <img src='https://images.unsplash.com/photo-1526256262350-7da7584cf5eb?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80' alt='login-admin' id='login-img'>
        <%= form_tag "/send_the_form_here_3" do %>
            <strong><%= label_tag :first_name %></strong>
            <%= text_field_tag :first_name %><br>
            <strong><%= label_tag :password %></strong>
            <%= password_field_tag :password %><br>
            <%= submit_tag "LOGIN!", :class => "btn btn-success" %>
        <% end %>
</div>