<h1>This is the new for aide </h1>


<%= form_for @aide do |f| %>


 <%= f.label :first_name %>
  <%= f.text_field :first_name %> <br/><br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br/><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br/><br>
  <%= f.label :age %>
  <%= f.number_field :age %><br/><br>
  <%= f.label :gender %>
  <%= f.select :gender, options_for_select(["Male", "Female"]) %><br/><br>
  <%= f.label :town_you_live_in %>
  <%= f.select :town_you_live_in, options_for_select(["Brooklyn", "Queens", "Bronx", "Jamaica", "Manhattan", "Long Island"]) %><br/><br>
  <%= f.label :town_you_can_work %>
  <%= f.select :town_you_can_work, options_for_select(["Brooklyn", "Queens", "Bronx", "Jamaica", "Manhattan", "Long Island"]) %><br/><br>
  <%= f.label :certifications %>
  <%= f.text_field :certifications %><br/><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br><br>
  <%= f.submit "SIGN ME UP!" %>
<% end %>


