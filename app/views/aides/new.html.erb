<h1>This is the new for aide </h1>


<%= form_for @aide do |f| %>


 <%= f.label :first_name %>
  <%= f.text_field :first_name %> <br/>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br/>
  <%= f.label :email %>
  <%= f.text_field :email %><br/>
  <%= f.label :role %>
  <%= f.select :role, options_for_select(["aide", "client"]) %><br/>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :age %>
  <%= f.number_field :age %><br/>
  <%= f.label :gender %>
  <%= f.text_field :gender %><br/>
  <%= f.label :address %>
  <%= f.text_field :address %><br/>
  
  
  

  <%= f.submit "Ready!" %>
<% end %>