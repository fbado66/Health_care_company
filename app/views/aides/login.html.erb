
<div class="customized-container">
    <h2>Welcome back Aide</h2>
        <% if @error %>
            <p><%= @error %></p>
        <% end %>
        <%# THE FORM BELOW MAKES A POST REQUEST TO "/send_the_form_here" %>
        <img src='https://images.unsplash.com/photo-1590649613897-1d5c44ca3409?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80' alt='login aides' id='login-img'>
        <%= form_tag "/send_the_form_here/" do %>
            <strong><%= label_tag :first_name %></strong>
            <%= text_field_tag :first_name %><br>
            <strong><%= label_tag :password %></strong>
            <%= password_field_tag :password %><br><br>
            <%= submit_tag "LOGIN!", :class => "btn btn-success" %>
        <% end %>
</div>